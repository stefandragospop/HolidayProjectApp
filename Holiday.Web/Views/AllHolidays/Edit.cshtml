@model Holiday.Web.Models.HolidayRequest

@{
    ViewData["Title"] = "Edit Holiday Request";
}

<h5>Update Holiday Request</h5>

<hr />
<div class="row">
    <div class="col-sm-3">
        Employee: <b> @Model.Employee.FullName </b>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-7">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HolidayRequestId" />
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label"></label>
                    @Html.TextBoxFor(model => model.StartDate, "{0:dd/MM/yyyy}", new { @readonly = "readonly", @class = "form-control datepicker" })
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndDate" class="control-label"></label>
                    @Html.TextBoxFor(model => model.StartDate, "{0:dd/MM/yyyy}", new { @readonly = "readonly", @class = "form-control datepicker" })
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NoOfDays" class="control-label"></label>
                    <input asp-for="NoOfDays" class="form-control" disabled />
                    <span asp-validation-for="NoOfDays" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    <select class="form-control" disabled asp-for="@Model.Type" asp-items="Html.GetEnumSelectList<Holiday.Web.Models.Constants.Type>()"></select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Status" class="control-label"></label>
                    <select class="form-control" asp-for="@Model.Status" asp-items="Html.GetEnumSelectList<Holiday.Web.Models.Constants.Status>().Where(x=>x.Value != 0.ToString())"></select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary btn-sm" /> | <a class="color-dark" asp-action="Index" data-toggle="tooltip" title="Back to List"><i class="fas fa-arrow-circle-left"></i></a>
                </div>
            </div>
        </form>
    </div>
</div>
